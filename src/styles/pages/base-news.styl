html, body {
  overflow: hidden;
}

html {
  height: 100%;
  font-size: unit($baseFontSize, 'px');

  * {
    font-size: toRem(12);
  }
}

body {
  height: 100%;
}

.container {
  width: toRem(1580);
  height: 100%;
  margin: 0 auto;
  position: relative;

  .header {
    height: toRem(155);
    line-height: toRem(130);
    position: relative;

    a {
      display: inline-block;
      height: toRem(43);
      padding: 0 toRem(20);
      color: $baseFontColor;
      font-size: toRem(18);
      line-height: toRem(43);
      vertical-align: middle;
      text-decoration: none;

      &.active {
        color: $newsNavHoverColor;
        border-bottom: toRem(2) solid $newsNavHoverColor;
      }
    }

    .control-panel {
      position: absolute;
      bottom: 0;
      right: 0;
      height: toRem(38);
      line-height: toRem(38);
      white-space: nowrap;
      margin-right: 0.9%;
      margin-bottom: 0.9%;

      .search-wrap, .datetime-wrap {
        margin-left: toRem(10);
        background: $newsButtonBackgroundColor;
        border-radius: toRem(19);
        display: inline-block;

        a {
          height: toRem(38);
          width: toRem(38);
          display: inline-block;
        }

        input {
          padding-left: toRem(0);
          box-sizing: border-box;
          background: transparent;
          border: none;
          color: $baseFontColor;
          height: toRem(38);
          line-height: toRem(38);
          width: toRem(0);
          transition: padding-left 0.2s ease-out width 0.2s ease-out;
        }
      }

      .search-wrap.isfocus input {
        width: toRem(150);
        padding-left: toRem(19);
      }

      .search-wrap a {
        background: url('images/news-search.png') no-repeat center;
      }

      .datetime-wrap a {
        background: url('images/news-datetime.png') no-repeat center;
      }
    }
  }

  .panel-container {
    margin: 0 -0.5%;
    overflow: hidden;
    position: absolute;
    top: toRem(155);
    bottom: 0;
    left: 0;
    right: 0;
  }

  .panel {
    width: 32%;
    margin: 0 0.5% 1% 0.5%;
    height: toRem(700);
    background: $panelBackground;
    float: left;
    position: relative;
    border-radius toRem(5);

    h1 {
      line-height: toRem(57);
      font-size: toRem(18);
      color: $baseFontColor;
      padding-left: toRem(30);
      font-weight: normal;
    }

    .mCustomScrollbar {
      position: absolute;
      top: toRem(57);
      width: 100%;
      bottom: toRem(15);
    }

    a.more {
      position: absolute;
      bottom: toRem(-15);
      right: toRem(20);
      width: toRem(60);
      height: toRem(30);
      line-height: toRem(30);
      text-decoration: none;
      background: #ec6d45;
      color: white;
      text-align: center;
      font-size: toRem(15);

      &:before, &:after {
        content: '';
        background: white;
      }

      &:before {
        display: inline-block;
        width: toRem(7);
        height: toRem(1);
        vertical-align: middle;
        margin-right: toRem(5);
        position: relative;
        top: toRem(-1);
      }

      &:after {
        height: toRem(7);
        width: toRem(1);
        position: absolute;
        left: toRem(12);
        top: toRem(12);
      }
    }

    ul {
      padding: toRem(10) toRem(20) toRem(20) toRem(20);

      li {
        &>a {
          display: block;
          color: $baseFontColor;
          text-decoration: none;

          &:hover {
            text-decoration: underline;
          }
        }

        i.button-mark {
          position: absolute;
          display: none;
          right: toRem(80);
          top: 50%;
          margin-top: toRem(-5);
        }

        &:hover {
          i.button-mark {
            display: inline-block;
          }
        }

        list-style: none;
        overflow: hidden;
        line-height: toRem(40);
        height: toRem(40);
        text-overflow: ellipsis;
        white-space: nowrap;
        padding-right: toRem(120);
        position: relative;
        color: $baseFontColor;
        font-size: toRem(14);

        span.datetime {
          position: absolute;
          right: 0;
        }

        &>a:before {
          content: '';
          height: toRem(0);
          width: toRem(0);
          border-width: toRem(5) 0 toRem(5) toRem(5);
          border-color: transparent transparent transparent #42c1f8;
          border-style: solid;
          display: inline-block;
          position: relative;
          opacity: 0.5;
          top: toRem(1);
        }
      }
    }
  }

  .button-mark {
    margin-right: toRem(5);
    height: toRem(10);
    width: toRem(11);
    display: inline-block;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    background-image: url('images/icon-mark.png');

    &.mark {
      background-image: url('images/icon-mark-marked.png');
    }
  }

  .panel-container.attention {
  }

  .date-group {
    &>h1 {
      line-height: toRem(70);
      height: toRem(70);
      font-size: toRem(30);
      color: $baseFontColor;
      margin: toRem(0);
      padding-left: toRem(10);
      font-weight: normal;
    }

    ul {
      margin: 0;
      padding: 0;
      overflow: hidden;

      li {
        list-style: none;
        float: left;
        width: 15.5%;
        margin: 0.5%;
        height: toRem(120);
        background: $panelBackground;
        border-radius: toRem(5);

        a {
          display: block;
          text-decoration: none;

          h1 {
            color: $baseFontColor;
            height: toRem(75);
            line-height: 1.5;
            font-size: toRem(20);
            padding: toRem(10) toRem(10);
            overflow: hidden;
            font-weight: normal;
          }

          p {
            line-height: toRem(24);
            text-align: right;
            padding-right: toRem(10);
            margin-top: toRem(15);
            color: $newsItemPColor;

            .button-mark {
              margin-right: 0;
              margin-left: 10px;
            }
          }
        }
      }
    }
  }
}

@import 'effects/fade';