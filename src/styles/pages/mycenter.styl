@import 'df-icon';
@import '../fullcalendar';
#df-self
	.left
		width:toRem(300)
		.userP
			width:100%
			height:toRem(120)
			background:rgba(255,255,255,.1)
			border-radius:toRem(5)
			img
				float:left;
				width:toRem(95)
				height:toRem(95)
				margin:toRem(13) toRem(20) 0 toRem(13)
			.userName
				float:left
				width:toRem(165)
				margin-top:toRem(25)
				.name
					line-height: toRem(40)
					font-size: toRem(22)
					color:#b5d6e8;
				.welcome
					line-height: toRem(30)
					font-size: toRem(14)
					color:#adabab
		.server
			width:100%
			height:toRem(547)
			border-radius:toRem(5)
			overflow: hidden;
			background:rgba(255,255,255,.1)
			margin-top:toRem(10)
			.nav
				height:toRem(40)
				background:rgba(255,255,255,.1) url('./images/server-nav-bg.png') no-repeat center;
				.list
					width:50%;
					float:left
					display: block
					text-align: center;
					line-height: toRem(40)
					font-size: toRem(16)
					color:#fff;
					i
						margin-right:toRem(5)
						vertical-align:middle
						width:toRem(20)
						height:toRem(20)
				.active
					color:#ef845c
			.lists
				height:toRem(500)
				ul
					display: none
				li
					border-top:toRem(1) solid #ada8a8
					padding:toRem(10)
					overflow: hidden
					&:first-child
						border:none
					.stuHead
						display: block
						width:toRem(46);
						height:toRem(46);
						margin-right:toRem(10)
						float:left;
					.stuImp
						float:left
						width:toRem(220)
						.stuName
							color: #fff
							font-size: toRem(16)
							line-height: toRem(30)
						.stuSpeak
							line-height: toRem(20)
							font-size: toRem(12)
							color:#fff;
						.display
							width:100%
							height:toRem(50)
							border-radius:toRem(5)
							background: rgba(255,255,255,.1)
							overflow: hidden
							margin-top:toRem(10)
							.stuDicBox
								width:toRem(50)
								height:toRem(50)
								background: rgba(255,255,255,.1)
								float:left
								overflow: hidden;
								.stuDis
									display: block
									width:toRem(36)
									height:toRem(36)
									margin: toRem(7)
							.disTextBox
								float:left
								width:toRem(155)
								padding-left:toRem(10)
								padding-top:toRem(5)
								p
									line-height: toRem(20)
									color:#fff
									height:toRem(20)
									text-overflow : ellipsis; 
									white-space : nowrap; 
									overflow : hidden; 
								.disName
									font-size: toRem(14);
									opacity: 0.9
								.disSpeak
									font-size: toRem(12);
									opacity: 0.7
					.stuBottom
						.stuTime
							float:left
							line-height: toRem(40)
							color: #fff
							opacity: 0.7
							font-size: toRem(12)
						.stuTake
							float:right
							width:toRem(17)
							height:toRem(17)
							margin-top:toRem(11)
							img
								width:100%
								height:100%
	.main
		margin-left:toRem(310)
		margin-right:toRem(390)
		overflow: hidden;
		padding-right: 0
		padding-left toRem(15)
		padding-top: toRem(7)
		padding-bottom: toRem(7)
		&>div
			padding-right: toRem(15)
		// height:toRem(680)
		.myData
			position: absolute
			line-height: toRem(50)
			font-size: toRem(18)
			color:#fff
		#calendar
			border-radius:toRem(5)
			overflow:hidden
	.right
		width:toRem(380)
		border-radius:toRem(5)
		background: rgba(255,255,255,.1)
		height:toRem(680)
		overflow: hidden
		.r-head
			height:toRem(40)
			background: rgba(255,255,255,.1)
			a
				width:33%
				display: block
				float:left
				text-align: center
				line-height: toRem(40)
				color:#fff
				font-size: toRem(16)
				&:after
					content:''
					display: inline-block
					width:toRem(1)
					height:toRem(20)
					float:left
					margin-top:toRem(10)
					background: rgba(255,255,255,.4)
				&:first-child:after
					display: none
			a.active
				color:#92d6ff
		.r-listBox
			padding-bottom:toRem(10)
			width:100%
			height:toRem(608)
			overflow: hidden
			box-sizing: border-box
			ul
				display: none
			li
				height:toRem(130)
				padding-left:toRem(15)
				.newName
					font-size: toRem(15)
					color: #fff;
					text-overflow : ellipsis; 
					white-space : nowrap; 
					position: relative
					line-height: toRem(40)
					cursor: pointer
					&:after
						content: ''
						position: absolute
						 display:block; 
						 width:0;
						height:0; 
						// background: red;
						top:toRem(-4)
						left:toRem(-22)
						margin-top:toRem(10)
						border-left:toRem(8) solid transparent;
						border-right:toRem(8) solid transparent;
						border-top:toRem(8) solid transparent;
						border-bottom:toRem(8) solid #FFF
						transform:rotate(-45deg)
						-webkit-transform: rotate(-45deg)
						-o-transform: rotate(-45deg)
						-ms-transform: rotate(-45deg)
					&:hover
						color: #3fe6f5
						&:after
							border-bottom-color:#3fe6f5		
				.newCenter
					height: toRem(50)
					line-height: toRem(25)
					color: #fff
					opacity: 0.8
					font-size: toRem(13)
					padding-right:toRem(10)
					text-overflow: -o-ellipsis-lastline;
					overflow: hidden;
					text-overflow: ellipsis;
					display: -webkit-box;
					-webkit-line-clamp: 2;
					-webkit-box-orient: vertical;
				.newTime
					color: #fff
					opacity: 0.8
					font-size: toRem(13)
					line-height: toRem(40)	
					border-bottom:toRem(1) solid #ada8a8
				.listSec
					height:toRem(95)
					padding-top:toRem(25)
					.waiting
						background: #7dcdf4
					.wait
						background: #89a3d4
					.noPass
						background:#ea5532
					.pass
						background: #acacac
					.state
						float:left
						width:toRem(52)
						margin-right:toRem(10)
						font-size: toRem(15)
						color:#fff
						border-radius:toRem(52)
						line-height: toRem(52)
						text-align: center
					.listTti
						float:left
						width:toRem(302)
						.listName
							line-height: toRem(30)
							font-size: toRem(15)
							text-overflow : ellipsis; 
							white-space : nowrap; 
							overflow : hidden; 
						.listText
							line-height: toRem(20)	
							font-size: toRem(12)
							text-overflow : ellipsis; 
							white-space : nowrap; 
							overflow : hidden; 
							opacity: 0.8
						p
							color:#fff
				.listB
					background: rgba(255,255,255,.1)		
					height:toRem(35)
					.tea
						float:left
						margin-left:toRem(10)
						.teacher
							font-size toRem(14)
							line-height: toRem(35)
							color: #fff
							font-weight: 500
						.teaSta
							font-size toRem(14)
							opacity: 0.9	
							line-height: toRem(35)
							color: #fff
					.stuTime
						float:right
						margin-right:toRem(10)	
						opacity: 0.8	
						line-height: toRem(35)
						color: #fff
						font-size toRem(12)
		.r-fotter
			height:toRem(35);
			border-top:toRem(1) solid #737373
			text-align: center
			line-height: toRem(35)
			.r-more
				color: #fff
				opacity: 0.8
				background: url('./images/more-bg.png') no-repeat left center;
				padding-left:toRem(30)
				font-size: toRem(12)
				background-size:toRem(21) toRem(4)
				
