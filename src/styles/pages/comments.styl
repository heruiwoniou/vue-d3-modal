html,body{
    overflow: hidden;
}
html{
    height: 100%
}
.app{
    position: fixed;
    height: 100%;
    width: 100%;

    .comment{
        padding: 0 20px;
        h2{
            font-size: 14px;
            line-height: 1;
            text-align: center;
            color: #959595;
        }
        hr{
            margin: 20px 0;
            border:none;
            height: 1px;
            font-size: 0;
            background: #d6d6d6;
        }
        .star-panel{
            margin: 10px 0;
            text-align: center;
            span{
                display: inline-block;
                height: 12px;
                width: 13px;
                background: url('images/star.png') no-repeat center;
                &.mark{
                    background: url('images/star-mark.png') no-repeat center;
                }
            }
            i{
                font-size: 14px;
                font-style: normal;
            }
        }
        .history{
            margin: 10px 0;
            a{
                line-height: 25px;
                display: inline-block;
                height: 25px;
                min-width:80px;
                padding: 0 12px;
                border-radius: 12.5px;
                background: #ebebeb;
                text-align: center;
                margin-bottom: 5px;
                color: #2e2e2e;
                font-size: 12px;
                &.mark{
                    color:white;
                    background: #f29a75;
                }
            }
        }
        .area{
            margin: 10px 0;
            textarea{
                width: 100%;
                border:none;
                background: #f2f2f2;
                border-radius: 8px;
                padding: 15px;
            }
        }
        .button-panel{
            margin: 10px 0;
            padding: 20px 0;
            text-align: center;
            button{
                height: 40px;
                line-height: 40px;
                padding: 0 20px;
                color: white;
                border:none;
                outline:none;
                background: #0067b3;
                border-radius: 6px;
                cursor: pointer;
            }
        }
    }

    .button-panel{
        text-align: center;
        .button-mark,
        .button-share{
            margin:0 5px;
            height: 20px;
            width: 20px;
            display: inline-block;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
        }
        .button-share{
            background-image: url(images/share1.png)
            &.mark{
                background-image: url(images/share2.png)
            }
        }
        .button-mark{
            background-image: url(images/mark1.png)
            &.mark{
                background-image: url(images/mark2.png)
            }
        }
    }

    hr{
        margin: 20px 0;
        border:none;
        height: 1px;
        font-size: 0;
        background: #d6d6d6;
    }
    .content-container{
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 70px;
        .left{
            text-align: center;
            button{
                margin-top: 10px;
                height: 40px;
                line-height: 40px;
                padding: 0 20px;
                color: white;
                border:none;
                outline:none;
                background: #0067b3;
                border-radius: 6px;
                cursor: pointer;
            }
            position: absolute;
            width: 170px;
            top: 0;
            padding: 30px;
            .img-container{
                height: 110px;
                width: 110px;
                line-height: 110px;
                border-radius: 50%;
                img{
                    width: 100%;
                }
            }
            .button-panel{
                margin-top: 40px;
            }
            .star-panel{
                margin-top: 10px;
                span{
                    display: inline-block;
                    height: 12px;
                    width: 13px;
                    background: url('images/star.png') no-repeat center;
                    &.mark{
                        background: url('images/star-mark.png') no-repeat center;
                    }
                }
            }
            h1{
                font-size: 14px;
                line-height: 30px;
                margin-top: 10px;
                span{
                    float: right;
                    color: #dc1818;
                }
            }
            p{
                color: #0067b3;
                font-size: 12px;
                margin-top: 10px;
            }
        }
        .right{
            position: absolute;
            top: 0;
            left: 170px;
            bottom: 0;
            right: 10px;
            h1{
                line-height: 35px;
                font-size: 18px;
            }
            h2{
                line-height: 30px;
                font-size: 16px;
                a{
                    float:right;
                    font-size: 14px;
                    color: #5282c3;
                    &:before{
                        content:'';
                        height: 13px;
                        vertical-align: middle;
                        position: relative;
                        top: -1px;
                        width: 13px;
                        display: inline-block;
                        background: url(images/write-pen.png) no-repeat center;
                        margin-right: 5px;
                    }
                }
            }
            p{
                margin: 15px 0;
                color: #4f4f4f;
                font-size: 12px;
            }
            ul{
                li{
                    border-bottom: 1px solid #d6d6d6;
                    margin: 20px 0;
                    p{
                        color: #919191;
                    }
                    p span,p i{
                        display: inline-block;
                        width: 30%;
                    }
                    p.content{
                        color: #161616;
                    }
                    &.more{
                        border: none;
                        font-size: 12px;
                        color: #0067b3;
                    }
                }
            }
        }
    }
    .footer-container{
        height: 70px;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 10px;
        line-height: 70px;
        padding-left: 170px;
        button{
            height: 40px;
            line-height: 40px;
            padding: 0 20px;
            color: white;
            border:none;
            outline:none;
            background: #0067b3;
            border-radius: 6px;
            cursor: pointer;
        }
        label{
            float: right;
        }
    }
}