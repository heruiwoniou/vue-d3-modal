.icon-find, .icon-recommend {
    display: inline-block;
    width: toRem(20);
    height: toRem(20);
    background-size: contain;
    position: relative;
    top: -2px;
}

.icon-find {
    background: url('./images/icon-find.png') no-repeat center;
    background-size: contain;
}

.icon-recommend {
    background: url('./images/icon-recommend.png') no-repeat center;
    background-size: contain;
}

.active {
    .icon-find {
        background: url($centerLeftFindIconActionImage) no-repeat center;
        background-size: contain;
    }

    .icon-recommend {
        background: url($centerLeftRecommendIconActionImage) no-repeat center;
        background-size: contain;
    }
}