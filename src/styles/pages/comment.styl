html,body{
    height: 100%
}
.comment{
    padding: 0 20px;
    h2{
        font-size: 14px;
        line-height: 1;
        text-align: center;
        color: #959595;
    }
    hr{
        margin: 20px 0;
        border:none;
        height: 1px;
        font-size: 0;
        background: #d6d6d6;
    }
    .star-panel{
        margin: 10px 0;
        text-align: center;
        span{
            display: inline-block;
            height: 12px;
            width: 13px;
            background: url('images/star.png') no-repeat center;
            &.mark{
                background: url('images/star-mark.png') no-repeat center;
            }
        }
        i{
            font-size: 14px;
            font-style: normal;
        }
    }
    .history{
        margin: 10px 0;
        a{
            line-height: 25px;
            display: inline-block;
            height: 25px;
            min-width:80px;
            padding: 0 12px;
            border-radius: 12.5px;
            background: #ebebeb;
            text-align: center;
            margin-bottom: 5px;
            color: #2e2e2e;
            font-size: 12px;
            &.mark{
                color:white;
                background: #f29a75;
            }
        }
    }
    .area{
        margin: 10px 0;
        textarea{
            width: 100%;
            border:none;
            background: #f2f2f2;
            border-radius: 8px;
            padding: 15px;
        }
    }
    .button-panel{
        margin: 10px 0;
        padding: 20px 0;
        text-align: center;
        button{
            height: 40px;
            line-height: 40px;
            padding: 0 20px;
            color: white;
            border:none;
            outline:none;
            background: #0067b3;
            border-radius: 6px;
            cursor: pointer;
        }
    }
}