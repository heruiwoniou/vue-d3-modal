        }
       
    }

    .button-mark{
        margin-right: toRem(5)
        height: toRem(10)
        width: toRem(11)
        display: inline-block;
        background-size: contain
        background-position: center
        background-repeat: no-repeat
        background-image: url(images/icon-mark.png)
        &.mark{
            background-image: url(images/icon-mark-marked.png)
        }
    }

    .panel-container.attention{
        
    }

    .date-group{
        &>h1{
            line-height: toRem(70);
            height: toRem(70);
            font-size: toRem(30);
            color:white;
            margin: toRem(0);
            padding-left: toRem(10);
            font-weight: normal;
        }
        ul{
            margin: 0;
            padding: 0;
            overflow: hidden;
            li{
                list-style:none;
                float:left;
                width: 15.5%;
                margin: 0.5%;
                height: toRem(120);
                background: rgba(255,255,255,.2);
                border-radius: toRem(5);
                a{
                    display: block;
                    text-decoration: none;
                    h1{
                       color: rgba(255,255,255,.72);
                        height: toRem(75);
                        line-height: 1.5;
                        font-size: toRem(20);
                        padding: toRem(10) toRem(10);
                        overflow: hidden; 
                        font-weight: normal;
                    }
                    p{
                        line-height: toRem(24);
                        text-align: right;
                        padding-right: toRem(10);
                        margin-top: toRem(15);
                        color: #b6b6b6;
                        .button-mark{
                            margin-right: 0;
                            margin-left: 10px;
                        }
                    }
                }
            }
        }
    }
