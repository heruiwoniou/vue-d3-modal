@import 'var';
@import 'jquery.mCustomScrollbar';

i,em 
    font-family: normal
li 
    list-style: none
a  
    text-decoration: none
table 
    border-collapse: collapse
input,textarea
    outline: none
textarea 
    resize: none
    overflow: hidden
*
    box-sizing: border-box
    font-family: "Microsoft YaHei",'宋体' , Tahoma, Helvetica, Arial, "\5b8b\4f53", sans-serif
    margin: 0
    padding: 0
.clear
    zoom: 1
.clear:after
    content: ""
    display: block
    clear: both