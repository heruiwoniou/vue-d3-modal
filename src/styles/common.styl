@import 'var';
@import 'jquery.mCustomScrollbar';

i,em 
    font-family: normal
li 
    list-style: none
a  
    text-decoration: none
table 
    border-collapse: collapse
input,textarea
    outline: none
textarea 
    resize: none
    overflow: hidden
*
    box-sizing: border-box
    font-family: "Microsoft YaHei",'宋体' , Tahoma, Helvetica, Arial, "\5b8b\4f53", sans-serif
    margin: 0
    padding: 0
.clear
    zoom: 1
.clear:after
    content: ""
    display: block
    clear: both

table.form{
    table-layout: fixed;
    border-collapse: collapse;
    width: 100%;
    th,td{
        height: 40px;
        color: #403f7a;
        font-size: 14px;
        text-align: left;
        padding-left: 10px;
        &.center{
            text-align: center;
        }
        &.right{
            text-align: right;
        }
        &.top{
            vertical-align: top;
            padding-top: 9px;
        }
        &.bottom{
            vertical-align: bottom;
        }
        &>input[type='text'],&>input[type='password'],&>select{
            display: block;
            width: 100%;
        }
        input[type='text'],input[type='password'],textarea{
            border: none;
            background: #f2f2f2;
            width: 100%;
            border-radius: 8px;
            padding: 0 10px;
        }
        textarea{
            margin: 5px 0;
            padding: 10px;
        }
        input[type='text'],input[type='password']{
            height: 30px;
        }
        .button{
            height: 40px;
            line-height: 40px;
            padding: 0 20px;
            color: white;
            border:none;
            outline:none;
            background: #0067b3;
            border-radius: 6px;
            cursor: pointer;
        }
        input[type='text'].calendar{
            background-image: url('images/icon-calendar.png');
            background-position: 100% 50%;
            background-repeat: no-repeat;
        }
    }
    
}